{{#if user}}

<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Usted ya se encuentra en una sesion</h3>
        </div>
        <div class="card-body">
            <form action="/notes">
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Ver notas
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card header">
                <h1>Inicia sesion</h1>
            </div>
            <h1><i class="far fa-user"></i></h1>
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Correo" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Contrasena">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Iniciar sesion
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}